{
    "name": "Trading View Extender",
    "version": "1.0",
    "description": "Listens for alerts generated within the Trading View web platform and performs trading actions.",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "https://uk.tradingview.com/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_title": "Trading View Extender",
        "default_icon": {
            "16": "images/tve16.png",
            "32": "images/tve32.png",
            "48": "images/tve64.png",
            "128": "images/tve128.png"
        }
    },
    "web_accessible_resources": [],
    "manifest_version": 2
}
